@model InAndOut.Models.Yritused

<form asp-action="DeletePost" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="@Model.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YritusName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Aeg"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="YritusName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Aeg" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@*client validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}