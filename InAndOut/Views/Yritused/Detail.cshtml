@model InAndOut.ViewModel.PersonUritusViewModel

<form method="post" asp-action="Create" asp-controller="Person">
    <input asp-for="GetYritused.Id" hidden />
    <div class="border p-3">
   
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Details</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <h4>@Html.DisplayFor(model => model.GetYritused.YritusName)</h4>
                    </div>
                    <div class="col-6">
                        <h4>@Html.DisplayFor(model => model.GetYritused.Aeg)</h4>

                    </div>
                </div>


                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="GetPerson.Eesnimi"></label>
                                <input asp-for="GetPerson.Eesnimi" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="GetPerson.Perekonnanimi"></label>
                                <input asp-for="GetPerson.Perekonnanimi" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="GetPerson.Isikukood"></label>
                                <input asp-for="GetPerson.Isikukood" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="GetPerson.Maksmine"></label>
                                <select name="Maksmine" asp-for="GetPerson.Maksmine" class="form-control">
                                    <option value="Kaart">Kaart</option>
                                    <option value="Sularaha">Sularaha</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label asp-for="GetPerson.Lisainfo"></label>
                                <input asp-for="GetPerson.Lisainfo" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="GetPerson.UrituseId"></label>
                                <input asp-for="GetYritused" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-8 offset-2 row">
                                <div class="col">
                                    <input type="submit" class="btn btn-info w-75" value="create" />
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                @if (Model.people.Count() > 0)
                {
                    <table class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Ürituse nimi
                                </th>
                                <th>
                                    Aeg
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pers in Model.people)
                            {
                               
                                    <tr>
                                        <td width="50%">@pers.Eesnimi</td>
                                        <td width="50%">@pers.Perekonnanimi</td>
                                           
                                        

                                    </tr>
                                
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No expenses created yet</p>
                }



            </div>
        </div>
    </div>
</form>


