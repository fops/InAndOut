@model IEnumerable<InAndOut.Models.Yritused>
<div class="container">
    <div class="row">
        <div class="different-color col-md-6">
            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. </p>
        </div>
        <div class="col-md-6">
            <img class="img-thumbnail" src="https://www.imgacademy.com/themes/custom/imgacademy/images/helpbox-contact.jpg" />
        </div>

    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Ürituse nimi
                    </th>
                    <th>
                        Aeg
                    </th>
                
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    @if(expense.Aeg >= DateTime.Now) {  
                <tr>
                    <td width="35%">@expense.YritusName</td>
                    <td width="35%">@expense.Aeg</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Yritused" asp-action="Detail" asp-route-Id="@expense.Id" class="btn btn-success mx-1">Detail</a>
                            <a asp-controller="Yritused" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                    
                </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses created yet</p>
    }
</div>